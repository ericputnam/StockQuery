.container

  h1 Stock Chart for Symbol : {{ vm.mySymbol }}

  .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(match-route='/')
          a(class='dropdown-toggle', data-toggle='dropdown', role='button', aria-expanded='false') {{ vm.mySymbol == null ? 'Plesae Select Stock Symbol' : 'Symbol: ' + vm.mySymbol }}
            span(class='caret')
          ul(class='dropdown-menu', role='menu')
            li(ng-repeat='result in vm.dropdown')
              a(href='#/chart/{{result.value}}') {{ result.value }}

  canvas(id='stockChart', class='chart chart-bar', chart-data='data', chart-labels='labels')

